<div id="contact-us">
  <div class="container">
    <h1>Contact Us</h1>
    <div class="line"></div>

    <form>
        <div class="form-control">
          <label>Name</label>
          <input type="text" placeholder="Enter Name" />
        </div>
        <div class="form-control">
          <label>Email</label>
          <input
            type="email"
            name="email"
            placeholder="Enter Email"

          />

        </div>
        <div class={`form-control`}>
          <label>Subject</label>
          <input
            type="text"
            class="full-width"
            placeholder="Enter Subject"
          />
        </div>
        <div class="form-control">
          <label>Message</label>
          <textarea rows="5" placeholder="Type Message" ></textarea>
          
        </div>
        <input type="submit" value="submit" />
      </form>

  </div>
</div>
